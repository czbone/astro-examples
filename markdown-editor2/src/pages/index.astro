---
import Layout from '../layouts/Layout.astro'
import '../styles/global.css'
import { marked } from 'marked'
import { readFileSync } from 'fs'
import { join } from 'path'

// document.mdの内容を直接読み込む
const content = readFileSync(join(process.cwd(), 'docs', 'document.md'), 'utf-8')
const htmlContent = marked(content)
---

<Layout title="ドキュメント">
  <main class="container mx-auto px-4 py-8">
    <div class="mb-8 flex items-center justify-between">
      <h1 class="text-4xl font-bold">ドキュメント</h1>
      <a href="/editor" class="text-blue-600 hover:text-blue-800">エディタを開く</a>
    </div>
    <div class="markdown-content mx-auto max-w-3xl" set:html={htmlContent} />
  </main>
</Layout>
